---
export interface Props {
  first: string;
  second: string;
}

const { first, second } = Astro.props;
---

<div class="modal">
  <p class="modal__text-l">{first}</p>
  <p class="modal__text-r">{second}</p>
</div>

<style>
  .modal {
    display: flex;
    position: fixed;
    justify-content: space-between;
    width: var(--container-width);

    left: 50%;
    transform: translateX(-50%);

    top: calc((50% - var(--header-height) - var(--spacer-m)));

    font-size: var(--step-1);
    transition:
      opacity 0.6s cubic-bezier(0, 0, 0.6, 1),
      filter 0.6s cubic-bezier(0, 0, 0.6, 1),
      z-index 0.6s cubic-bezier(0, 0, 0.6, 1);
    opacity: 1;
    filter: blur(0px);
    mix-blend-mode: difference;
    z-index: 1;
  }

  .modal__text-l {
    text-align: left;
  }

  .modal__text-r {
    text-align: right;
  }

  .modal.close {
    opacity: 0;
    filter: blur(10px);
    z-index: -1;
    transition:
      opacity 0.6s cubic-bezier(0, 0, 0.6, 1),
      filter 0.6s cubic-bezier(0, 0, 0.6, 1),
      z-index 0.6s cubic-bezier(0, 0, 0.6, 1),
      top 2s;
    transition-delay: 0s, 0s, 0s, 2s;
  }
</style>
