---
export interface Props {
  title: string;
}

const { title } = Astro.props;
const currentPath = Astro.url.pathname;
const showClose = currentPath != "/";
---

<header class={showClose ? "header header--between" : "header header--center"}>
  <p id="visibleSlug">{title}</p>
  {
    showClose && (
      <div>
        <p>
          <a href="#info">INFO</a>
        </p>
        <p>
          <a href="/">STÃ„NG</a>
        </p>
      </div>
    )
  }
</header>

<style>
  .header {
    display: flex;
    flex-direction: row;
    position: sticky;
    align-items: baseline;
    width: var(--header-width);
    height: var(--header-height);
    left: calc((100% - var(--container-width)) / 2);
    top: var(--spacer-m);
    mix-blend-mode: difference;
    transition:
      opacity 0.6s cubic-bezier(0, 0, 0.6, 1),
      filter 0.6s cubic-bezier(0, 0, 0.6, 1);
    opacity: 0;
    filter: blur(10px);
    z-index: 1;
  }

  .header--center {
    justify-content: center;
  }

  .header--between {
    justify-content: space-between;
  }

  header.open {
    opacity: 1;
    filter: blur(0px);
  }

  header > div {
    display: flex;
    flex-direction: row;
    gap: 1.25rem;
  }

  #visibleSlug {
    font-size: var(--step-1);
    text-transform: capitalize;
  }
</style>
