---
import { type CollectionEntry, getCollection } from "astro:content";
import { Image } from "astro:assets";
import BaseLayout from "@layouts/BaseLayout.astro";
import ProjectList from "@components/ProjectList.astro";
import Modal from "@components/Modal.astro";
import Info from "@components/Info.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";

interface Props {
  entry: CollectionEntry<"wedding">;
}

export async function getStaticPaths() {
  const wedding = await getCollection("wedding");
  return wedding.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
const photos = entry.data.images;
---

<BaseLayout title={`${entry.data.title}`}>
  <Modal first={entry.data.title} second={entry.data.location} />
  <div class="index__container">
    <Header title={""} />
    <section class="index__section">
      {
        photos.map((photo) => (
          <div>
            <a id={entry.data.title}>
              <Image
                class="index__img lazy__load"
                src={photo}
                alt="Wedding Photo, couple"
                width={1200}
              />
            </a>
          </div>
        ))
      }
    </section>
  </div>
  <Info Content={Content} />
  <ProjectList />
  <Footer />
</BaseLayout>

<style>
  .index__container {
    margin-inline: var(--images-inline);
  }

  @media (width <=750px) {
    .index__container {
      margin-inline: unset;
    }
  }

  .index__section div {
    display: grid;
    align-items: center;
    justify-content: flex-start;
  }

  .index__section > div {
    margin-block-end: 150px;
  }

  .index__section > div:nth-child(even) {
    justify-content: flex-end;
  }

  @media (width <=750px) {
    .index__container > section {
      justify-content: center;
      gap: 1rem 0rem;
      margin-block-end: 12rem;
    }
  }

  .index__img {
    min-width: inherit;
    min-height: inherit;
    max-height: 600px;
    max-width: 600px;
    object-fit: contain;
  }

  @media (width <=750px) {
    .index__img {
      max-width: 100%;
    }
  }
</style>
