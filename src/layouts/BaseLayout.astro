---
import "@styles/import.css";
import { AstroFont } from "astro-font";
import Transitions from "@components/Transitions";

export interface Props {
  title: string;
}

const { title } = Astro.props;
const canonicalURL = (Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="Klas Näsman" content="Bröllopsfotograf baserad i Stockholm" />
    <meta name="description" content="Klas Näsman, Bröllopsfotograf baserad i Stockholm." />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:title" content="Klas Näsman Bröllopsfoto" />
    <meta property="og:description" content="Bröllopsfotograf baserad i Stockholm" />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Klas Näsman Bröllopsfoto" />
    <meta name="theme-color" content="#000000" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <link rel="manifest" href="/manifest.json" />
    <link rel="canonical" href={canonicalURL} />
    <meta property="og:url" content={canonicalURL} />
    <script src="../assets/js/lazyHeaderModal.js"></script>
    <script src="../assets/js/activeSlug.js"></script>
    <script src="../assets/js/infoGoTo.js"></script>
    <AstroFont
      config={[
        {
          name: "Domaine Sans Text",
          src: [
            {
              style: "normal",
              weight: "400",
              path: "/assets/fonts/DomaineSansText-Regular.woff2",
            },
          ],
          preload: true,
          display: "block",
          fallback: "sans-serif",
        },
      ]}
    />
    <!-- site by Out Surfing Studio -->
  </head>
  <body>
    <main class="main">
      <Transitions client:load>
        <slot />
      </Transitions>
    </main>
  </body>
</html>

<style>
  .main {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-inline: var(--images-inline);
  }

  @media (width <=750px) {
    .main {
      padding-inline: 1rem;
    }
  }
</style>
