---
import "@styles/font/fonts.css";
import "@styles/import.css";
import Transitions from "@components/Transitions";

export interface Props {
  title: string;
}

const { title } = Astro.props;
const canonicalURL = (Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:title" content="Klas Näsman Wedding Photography" />
    <meta
      property="og:description"
      content="Wedding Photographer based in Stockholm, Sweden"
    />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Klas Näsman Wedding Photography" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      rel="preload"
      href="/fonts/DomaineSansText-Regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link rel="canonical" href={canonicalURL} />
    <meta property="og:url" content={canonicalURL} />
    <script src="../assets/js/headerModalReveal.js"></script>
    <script src="../assets/js/infoGoTo.js"></script>
    <script src="../assets/js/activeSlug.js"></script>
    <script src="../assets/js/lazy.js"></script>
  </head>
  <body>
    <main class="main">
      <Transitions client:load>
        <slot />
      </Transitions>
    </main>
  </body>
</html>
